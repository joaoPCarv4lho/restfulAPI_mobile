        "/api/user/register": {
            "post": {
                "summary": "Register a new user",
                "description": "Route responsible for creating a new user",
                "tags": ["Users"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "example": {
                                "name": "João Paulo",
                                "username": "joaoCarvalho",
                                "email": "codejp@gmail.com",
                                "password": "1234567",
                                "img": "https://avatars.githubusercontent.com/u/59859395?v=4"
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Not found"
                    },
                    "200": {
                        "description": "User registered successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
